pipeline {
    agent any
    environment {
        DOCKER_HUB_REPO = "abdelazizomar" // Replace with your Docker Hub username
        DOCKER_IMAGE_NAME = "tomcat-webapp" // Replace with your Docker image name
        COMMIT_SHA = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
    }
    stages {
        stage('Building Stage') {
            steps {
                script {
                    sh "docker build -t maven-builder ."
                    //sh 'docker run --rm -v $PWD/webapp/target:/app/webapp/target -v $PWD/server/target:/app/server/target maven-builder'
                    //sh ' docker run --rm  -v shared-data:/app maven-builder'
                  
                    // app = docker.build("${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:${COMMIT_SHA}", ".")
                    // docker.withRegistry('https://registry.hub.docker.co', 'docker-hub-credentials') {
                    //    app.push()
                    // }

                    //sh 'docker run --network=host ${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:${COMMIT_SHA}'

                    app = docker.build("${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:${COMMIT_SHA}", ".")
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                       app.push()
                    }

                    sh 'docker run -d --network=host ${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:${COMMIT_SHA}'


                }
            }
        }
        // stage('Deploy Stage') {
        //     steps {
        //         script {
        //             docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
        //                 docker.image("${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:${COMMIT_SHA}").push()
        //                 docker.image("${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:latest").push()
        //             }
        //             sh 'docker run --network=host ${DOCKER_HUB_REPO}/${DOCKER_IMAGE_NAME}:latest'
        //         }
        //     }
        // }
    }
}
